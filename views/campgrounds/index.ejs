<% layout('layouts/boilerplate') %>
    <h1>ALL CAMPGROUNDS</h1>
    <div>
        <a href="/campgrounds/new">ADD CAMPGROUNDS</a>
    </div>

    <% for(let camp of campgrounds){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">

                    <img class="img-fluid" alt="" src="<%= camp.images[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= camp.title%>
                        </h4>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <p class="card-text">
                        <h6 class="text-muted">
                            Price: &#8377; <%= camp.price %>k
                        </h6>
                        </p>
                        <a class="btn btn-warning" href="/campgrounds/<%=camp._id%>">View <%= camp.title %></a>
                    </div>
                </div>
            </div>
        </div>



        <%}%>